{
  "expo": {
    "name": "Kookt - Cuisine IA",
    "slug": "kookt-cuisine-ia",
    "version": "1.0.0",
    "sdkVersion": "53.0.0",
    "scheme": "kookt",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#22c55e"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.kookt.cuisineia"
    },
    "android": {
      "package": "com.kookt.cuisineia",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#22c55e"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-image-picker",
      "expo-font"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "openaiApiKey": "your_openai_api_key_here",
      "claudeApiKey": "",
      "apiBaseUrl": "https://api.kookt.com",
      "environment": "development"
    }
  }
}
